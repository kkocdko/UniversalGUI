<Application x:Class="UniversalGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UniversalGUI"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
             StartupUri="MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--Themes-->
                <ResourceDictionary Source="Resources\Themes\Flat.xaml"/>

                <!--Languages-->
                <ResourceDictionary Source="Resources\Languages\zh-CN.xaml"/>
                <ResourceDictionary Source="Resources\Languages\zh-TW.xaml"/>
                <ResourceDictionary Source="Resources\Languages\en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
